{
    "sass.enabled": false,
    "sass.compiler": "libsass",
    "path": {
        "sass/bbstyle.scss": {
            "sass.enabled": true,
            "sass.options": {
                "includePaths": [
                    "bourbon/",
                    "utilities/",
                    "base/",
                    "modules/",
                    "layout/",
                    "layout/sections/",
                    "layout/openers/",
                    "animation/"
                ],
                "outputDir": "../css/",
                "sourceComments": false,
                "outputStyle": "nested",
                "sourceMap": "false"
            },
            "linting.collapsed": false
        }
    }
}
